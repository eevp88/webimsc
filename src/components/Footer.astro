---
import { SITE } from "@/consts/sitio";
import { getHomePermalink } from "@/utils/permalinks";

interface Link {
  text?: string;
  href: string;
}

export interface Props {
  links: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { footNote = "", links, theme = "light" } = Astro.props;
---

<footer
  class:list={[
    { dark: theme === "dark" },
    "relative border-t border-gray-200 dark:border-slate-800 not-prose",
  ]}
>
  <div
    class="dark:bg-dark absolute inset-0 pointer-events-none"
    aria-hidden="true"
  >
  </div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300">
    <div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-6 md:py-10">
      <div class="col-span-12 lg:col-span-4">
        <div class="mb-2">
          <a class="inline-block font-bold text-xl" href={getHomePermalink()}
            >{SITE?.name}</a
          >
        </div>
      </div>
      {
        links.map(({ text, href }) => (
          <div class="col-span-6 md:col-span-3 lg:col-span-2">
            <a
              class="dark:text-gray-300 font-medium mb-2 text-muted hover:text-gray-700 hover:underline transition duration-150 ease-in-out"
              href={href}
            >
              <Fragment set:html={text} />
            </a>
          </div>
        ))
      }
    </div>
    <div class="flex items-center justify-between py-4 md:py-6">
      <div class="text-sm mx-auto dark:text-muted">
        <Fragment set:html={footNote} />
      </div>
    </div>
  </div>
</footer>
