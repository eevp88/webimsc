---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/common/Hero.astro";
//import Carrusel from '@/components/common/Carrusel.astro';
import { SITE } from "@/consts/sitio";
//import Swiper from "@/components/common/Swiper2.astro";
//import { loadSwiperImages } from "@/utils/loadSwiperImages";
//import { ImageFolder } from "@/types/ImageFolder";
import background from "@/assets/images/fondo.png";
import Features2 from "@/components/common/Features2.astro";

//const arrFotos = loadSwiperImages(ImageFolder.Begin);
---

<Layout title={SITE.name}>
  <Hero>
    <Fragment slot="title">
      Ingeniería, Mantención, Servicios y Comercialización Industrial SpA.
    </Fragment>
    <Fragment slot="subtitle">
      <span class="block mb-1 sm:hidden font-bold text-blue-600"></span>
      Con más de una década de experiencia, IMSC Industrial SpA se especializa en
      el área forestal e industrial, desarrollando soluciones técnicas y de mantención
      para calderas, sistemas de vapor y procesos productivos que utilizan biomasa
      y otros combustibles.
    </Fragment>

    <Fragment slot="content">
      Nuestra misión es aportar valor a cada proyecto a través de servicios
      confiables, competitivos y sustentables.
    </Fragment>
    <Fragment slot="image"> {background.src} </Fragment>
  </Hero>

  <Features2
    title="Nuestros Pilares"
    subtitle="Provides frequently used components for building websites using Tailwind CSS"
    items={[
      {
        title: "Ingeniería Avanzada",
        description:
          "Implementamos soluciones de ingeniería de vanguardia para optimizar procesos y garantizar la eficiencia operativa en cada proyecto.",
        icon: "material-symbols:engineering",
      },
      {
        title: "Mantenimiento Predictivo",
        description:
          "Ofrecemos servicios de mantenimiento preventivo y predictivo para minimizar tiempos de inactividad y prolongar la vida útil de sus equipos.",
        icon: "material-symbols:handyman-outline",
      },
      {
        title: "Soluciones Industriales Integrales",
        description:
          "Desde la consultoría hasta la ejecución, proporcionamos un espectro completo de servicios industriales adaptados a sus necesidades.",
        icon: "material-symbols:factory-outline-rounded",
      },
      {
        title: "Optimización de Procesos",
        description:
          "Analizamos y mejoramos sus procesos productivos, utilizando tecnología avanzada para asegurar la máxima eficiencia y reducción de costos.",
        icon: "material-symbols:trending-up",
      },
      {
        title: "Enfoque en Sustentabilidad",
        description:
          "Comprometidos con el medio ambiente, desarrollamos soluciones que promueven el uso eficiente de recursos y la reducción de la huella de carbono.",
        icon: "material-symbols:eco",
      },
      {
        title: "Seguridad y Calidad",
        description:
          "Nuestros proyectos se rigen por los más altos estándares de seguridad y calidad, asegurando resultados duraderos y confiables.",
        icon: "material-symbols:shield-outline-rounded",
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!--Swiper items={arrFotos} /-->
</Layout>
